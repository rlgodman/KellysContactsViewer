<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
<!--Create Add Contact button element and set properties -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:id="@+id/addContact"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addressIn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />
<!--Create Contact Name text box element and set properties-->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameIn"
        android:textIsSelectable="false"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="5dp" />
    <!--Create Contact Email Address text box element and set properties-->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailIn"
        android:hint="Email Address"
        android:layout_below="@+id/nameIn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="5dp" />
    <!--Create Contact Mobile Phone text box element and set properties-->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobileIn"
        android:hint="Mobile Phone"
        android:layout_below="@+id/emailIn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="5dp" />
    <!--Create Contact HomePhone text box element and set properties-->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/homeIn"
        android:hint="Home Phone"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobileIn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="5dp" />
    <!--Create Contact Address text box element and set properties-->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressIn"
        android:hint="Address"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeIn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
